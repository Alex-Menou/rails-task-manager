<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<% @tasks.each do |task| %>
  <div class="task-row">
    <%= check_box_tag "task_#{task.id}_completed", '1', task.completed, class: 'form-check-input', disabled: true%>
    <%= link_to task.title, task_path(task), class: 'task-title' %>
    <%= button_to task, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: 'btn' do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
  </div>
<% end %>
<br>
<%= link_to 'Create a task', new_task_path, class: 'btn btn-success' %><br>
