<h1>Tasks#new</h1>
<p>Find me in app/views/tasks/new.html.erb</p>

<%= form_with model: @task do |form| %>
  <div class="form-group">
    <%= form.label :title, class: 'form-check-label' %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :details, class: 'form-check-label' %>
    <%= form.text_area :details, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
    <%= form.label :completed, class: 'form-check-label' %>
    <%= form.check_box :completed, class: "form-check-input" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
