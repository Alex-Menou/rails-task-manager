<h1>Tasks#show</h1>
<p>Find me in app/views/tasks/show.html.erb</p>

<%= link_to "Edit this task", edit_task_path(), class: "btn btn-secondary" %><br>
<%= @task.title %><br>
<%= @task.details %><br>
<%= check_box_tag "task_#{@task.id}_completed", '1', @task.completed, class: 'form-check-input' %>

<% @message = @task.completed ? "This task is completed" : "This task is not yet completed" %>
<%= label_tag "task_#{@task.id}_completed", @message, class: 'form-check-label' %><br>
<%= link_to "Return to list", root_path() %><br>
